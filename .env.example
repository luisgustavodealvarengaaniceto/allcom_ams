# =============================================================================
# Allcom JC450 - Exemplo de Configurações de Ambiente
# =============================================================================
# 
# Copie este arquivo para .env e configure com seus valores reais
# 
# cp .env.example .env
#
# =============================================================================

# === API CONFIGURATION ===
API_ENDPOINT=http://fota-api.jimicloud.com
API_TIMEOUT=30000
API_MAX_BATCH_SIZE=100

# Chaves de autenticação JimiCloud (OBRIGATÓRIO)
JIMICLOUD_APP_KEY=your_app_key_here
JIMICLOUD_SECRET=your_secret_here

# === SERVER CONFIGURATION ===
PORT=3001
NODE_ENV=development

# === CACHE CONFIGURATION ===
CACHE_PREFIX=allcom_jc450_
CACHE_TTL=3600000
CACHE_MAX_SIZE=1000

# === PERFORMANCE SETTINGS ===
MAX_CONCURRENT_REQUESTS=5
REQUEST_DELAY=100
RETRY_ATTEMPTS=3
RETRY_DELAY=1000

# === FEATURE FLAGS ===
ENABLE_CACHE=true
ENABLE_DASHBOARD=true
ENABLE_EXPORT=true
ENABLE_FIRMWARE_MANAGER=true
ENABLE_DEBUG_LOGS=false

# === FIRMWARE SETTINGS ===
DEFAULT_FIRMWARE_REFERENCE=C450Pro_2.0.16_20250526
FIRMWARE_COMPARISON_ENABLED=true
FIRMWARE_AUTO_ANALYSIS=true

# === EXPORT SETTINGS ===
EXPORT_DEFAULT_FORMAT=csv
EXPORT_MAX_DEVICES=10000
EXPORT_INCLUDE_RAW_DATA=false

# === SECURITY SETTINGS ===
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000
SESSION_TIMEOUT=3600000

# === LOGGING SETTINGS ===
LOG_LEVEL=info
LOG_API_REQUESTS=true
LOG_ERRORS=true
LOG_PERFORMANCE=false

# === UI SETTINGS ===
DEFAULT_THEME=light
SHOW_ADVANCED_OPTIONS=true
AUTO_REFRESH_INTERVAL=300000

# === DEVELOPMENT SETTINGS ===
DEV_MOCK_API=false
DEV_SIMULATE_DELAY=false
DEV_DEBUG_MODE=false
